{
  "compilerOptions": {
    "target": "ESNext", // JavaScript 최신 버전
    "module": "ESNext", // JavaScript 최신 버전
    "rootDir": "src", // 소스 코드 루트 디렉토리 지정
    "outDir": "dist", // 컴파일된 파일을 저장할 폴더
    "strict": true, // 엄격한 타입 검사
    "esModuleInterop": true, // ES6 모듈과 호환성 유지.
    "skipLibCheck": true, // 타입 정의 파일의 타입 검사를 생략하는 옵션
    "moduleDetection": "force" // export를 자동으로 컴파일
  },
  "ts-node": {
    "esm": true
  },

  "include": ["src"]
}
